(executables
 (names test atd)
 (libraries yojson))

(rule
 (deps ./sample.json)
 (action
  (with-stdout-to
   test.output.json
   (run ./test.exe))))

(rule
 (action
  (with-stdout-to
   atd.output.json
   (run ./atd.exe))))

(rule
 (alias runtest)
 (action
  (progn
   (diff test.expected.json test.output.json)
   (diff atd.expected.json atd.output.json))))
