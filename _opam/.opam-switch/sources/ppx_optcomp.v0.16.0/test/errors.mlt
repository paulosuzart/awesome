module Test_double_else = struct

  [%% if true ]
  let x = 1
  [%% else ]
  let x = 2
  [%% else ]
  let x = 3
  [%% endif]

end
[%%expect{|
Line _, characters _-_:
Error: optcomp: second else clause.
|}]

module Test_else_elif = struct

  [%% if true ]
  let x = 1
  [%% else ]
  let x = 2
  [%% elif false ]
  let x = 3
  [%% endif]

end
[%%expect{|
Line _, characters _-_:
Error: optcomp: elif after else clause.
|}]

module Test_unterminated_if = struct

  [%% if true ]
